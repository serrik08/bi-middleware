          }
        }
      },
      "searchCriteriaData": {
        "type": "object",
        "properties": {
          "serviceId": {
            "type": "number",
            "decription": "service code",
            "example": "624"
          },
          "type": {
            "type": "string",
            "decription": "method type",
            "example": "B"
          }
        }
      },
      "clientData": {
        "type": "object",
        "properties": {
          "serviceId": {
            "type": "number",
            "decription": "service code",
            "example": "623"
          },
          "filtro": {
            "$ref": "#/components/schemas/ArrayOfFilters"
