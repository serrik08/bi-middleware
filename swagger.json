{
  "openapi": "3.0.0",
  "info": {
    "title": "Enrutador API",
    "description": "API del flujo de pago de servicios para el middleware",
    "version": "0.1.9"
  },
  "servers": [
    {
      "url": "http://{base_url}:{port}/{base_path}",
      "description": "Staging server",
      "variables": {
        "base_url": {
          "default": "172.16.1.32"
        },
        "port": {
          "default": "8087"
        },
        "base_path": {
          "default": ""
        }
      }
    }
  ],
  "paths": {
    "/criteriosbusquedas": {
      "post": {
        "description": "Criterios de busquedas",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/searchCriteriaRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully sent"
          },
          "400": {
            "$ref": "#/components/responses/400Error"
          }
        }
      }
    },
    "/clientes": {
      "post": {
        "description": "Clientes",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/clientRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully sent"
          },
          "400": {
            "$ref": "#/components/responses/400Error"
          }
        }
      }
    },
    "/deudas": {
      "post": {
        "description": "Deudas",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/debtsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully sent"
          },
          "400": {
            "$ref": "#/components/responses/400Error"
          }
        }
      }
    },
    "/pagos": {
      "post": {
        "description": "Pagos",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/paymentsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully sent"
          },
          "400": {
            "$ref": "#/components/responses/400Error"
          }
        }
      }
    },
    "/documentos": {
      "post": {
        "description": "Documentos",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/documentsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully sent"
          },
          "400": {
            "$ref": "#/components/responses/400Error"
          }
        }
      }
    }
  },
  
